                        "name": "featurePoint",
                        "in": "query",
                        "description": "Compound output consisting of lat and lon or easting and northing in meters (BC Albers, UTM Zones) show in detail mode only for XML and CSV formats. Example: -123.307,48.473",
                        "type": "string",
                        "required": false
                    },
                    {
                        "name": "distance",
                        "in": "query",
                        "description": "in km",
                        "type": "integer",
                        "required": true,
                        "default": 5
                    },
                    {
                        "name": "official",
                        "in": "query",
                        "description": "Limit to official or unofficial names",
                        "type": "integer",
                        "required": false,
                        "default": 1
