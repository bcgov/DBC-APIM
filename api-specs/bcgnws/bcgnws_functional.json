                    }
                ],
                "responses": {
                    "200": {
                        "description": "Inside search result"
                    }
                }
            }
        },
        "/names/near": {
            "get": {
                "description": "Returns all names, all official names, or notOfficial names within a given distance (in km) of a given point.",
                "tags": [
