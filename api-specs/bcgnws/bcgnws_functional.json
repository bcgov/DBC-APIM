                ],
                "parameters": [
                    {
                        "name": "bbox",
                        "in": "query",
                        "description": "Returns all names, all official names, or notOfficial names inside or intersected by a given bounding box. Format: bbox=minLon,minLat,maxLon,maxLat. Example: -127.132,50.474,-126.872,50.626",
                        "type": "string",
                        "required": false
                    },
                    {
                        "name": "sortBy",
                        "in": "query",
                        "description": "Sort Results",
                        "type": "string",
                        "required": false,
                        "default": "name",
                        "enum": [
