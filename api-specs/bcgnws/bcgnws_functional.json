                    },
                    {
                        "name": "outputStyle",
                        "in": "query",
                        "description": "Defines output style",
                        "type": "string",
                        "required": false,
                        "default": "detail",
                        "enum": [
                            "summary",
                            "detail"
                        ]
                    },
                    {
                        "name": "outputSRS",
                        "in": "query",
                        "description": "Defines output EPSG CRS",
                        "type": "integer",
                        "required": false,
                        "default": 4326,
                        "enum": [
