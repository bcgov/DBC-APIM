    "paths": {
        "/distance.{outputFormat}": {
            "get": {
                "description": "Represents the distance and time of the shortest or fastest path between given start and end points.",
                "tags": [
                    "distance"
                ],
                "parameters": [
                    {
                        "name": "outputFormat",
                        "in": "path",
                        "description": "Format of representation",
                        "type": "string",
                        "required": true,
                        "default": "json",
                        "enum": [
                            "json",
                            "kml",
                            "html"
                        ]
                    },
                    {
                        "name": "points",
                        "in": "query",
                        "description": "Example: -123.707942,48.778691,-123.537850,48.382005. A list of any number of route points in start to end order. See <a href=https://github.com/bcgov/DBC-APIM/blob/master/api-specs/router/glossary.md#points target='_blank'>points</a>",
                        "type": "string",
                        "required": true
                    },
                    {
                        "name": "outputSRS",
                        "in": "query",
                        "description": "The EPSG code of the spatial reference system (SRS) to use for output geometries. See <a href=https://github.com/bcgov/DBC-APIM/blob/master/api-specs/router/glossary.md#outputSRS target=\"_blank\">outputSRS</a>",
                        "type": "integer",
                        "required": false,
                        "default": 4326,
                        "enum": [
                            4326,
                            4269,
                            3005,
                            26907,
                            26908,
                            26909,
                            26910,
                            26911
                        ]
                    },
                    {
                        "name": "criteria",
                        "in": "query",
                        "description": "Routing criteria to optimize (e.g., shortest, fastest). Default is shortest.",
                        "type": "string",
                        "required": false,
                        "default": "shortest",
                        "enum": [
                            "shortest",
                            "fastest"
                        ]
                    },
                    {
                        "name": "distanceUnit",
                        "in": "query",
                        "description": "distance unit of measure (e.g., km, mi). Default is km.",
                        "type": "string",
                        "required": false,
                        "default": "km",
                        "enum": [
                            "km",
                            "mi"
                        ]
                    },
                    {
                        "name": "routeDescription",
                        "in": "query",
                        "description": "Route description (e.g., Shortest route from 1002 Johnson St, Victoria to 1105 Royal Ave,New Westminster)",
                        "type": "string",
                        "required": false,
                        "default": "Routing results"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Distance and time of the shortest or fastest route"
                    }
                }
            }
        },
        "/distance/betweenPairs.{outputFormat}": {
            "get": {
                "description": "Represents the distance and time of the shortest or fastest paths between all pairs of fromPoints and toPoints.",
                "tags": [
                    "distance"
                ],
                "parameters": [
                    {
                        "name": "outputFormat",
                        "in": "path",
                        "description": "Format of representation",
                        "type": "string",
                        "required": true,
                        "default": "json",
                        "enum": [
                            "json",
                            "html"
                        ]
                    },
                    {
                        "name": "fromPoints",
                        "in": "query",
                        "description": "Example: -123.707942,48.778691,-123.537850,48.382005. A comma-separated list of origin points. See <a href=https://github.com/bcgov/DBC-APIM/blob/master/api-specs/router/glossary.md#fromPoints target='_blank'>fromPoints</a>",
                        "type": "string",
                        "required": true
                    },
                    {
                        "name": "toPoints",
                        "in": "query",
                        "description": "Example: -124.972951,49.715181,-123.139464,49.704015. A comma-separated list of destination points. See <a href=https://github.com/bcgov/DBC-APIM/blob/master/api-specs/router/glossary.md#toPoints target='_blank'>toPoints</a>",
                        "type": "string",
                        "required": true
                    },
                    {
                        "name": "outputSRS",
                        "in": "query",
                        "description": "The EPSG code of the spatial reference system (SRS) to use for output geometries. See <a href=https://github.com/bcgov/DBC-APIM/blob/master/api-specs/router/glossary.md#outputSRS target=\"_blank\">outputSRS</a>",
                        "type": "integer",
                        "required": false,
                        "default": 4326,
                        "enum": [
                            4326,
                            4269,
                            3005,
                            26907,
                            26908,
                            26909,
                            26910,
                            26911
                        ]
                    },
                    {
                        "name": "criteria",
                        "in": "query",
                        "description": "Routing criteria to optimize (e.g., shortest, fastest). Default is shortest.",
                        "type": "string",
                        "required": false,
                        "default": "shortest",
                        "enum": [
                            "shortest",
                            "fastest"
                        ]
                    },
                    {
                        "name": "distanceUnit",
                        "in": "query",
                        "description": "distance unit of measure (e.g., km, mi). Default is km.",
                        "type": "string",
                        "required": false,
                        "default": "km",
                        "enum": [
                            "km",
                            "mi"
                        ]
                    },
                    {
                        "name": "routeDescription",
                        "in": "query",
                        "description": "Route description (e.g., Shortest route from 1002 Johnson St, Victoria to 1105 Royal Ave,New Westminster)",
                        "type": "string",
                        "required": false,
                        "default": "Routing results"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A list of routes and their route distances/times."
                    }
                }
            }
        },
